  "settings": [
    {
      "type": "group",
      "label": {
        "en": "Connection Settings",
        "nl": "Verbindingsinstellingen"
      },
      "children": [
        {
          "id": "ip",
          "type": "text",
          "label": {
            "en": "IP Address",
            "nl": "IP Adres"
          },
          "value": "192.168.1.100",
          "hint": {
            "en": "IP address of the Elfin EW-11 Modbus gateway",
            "nl": "IP adres van de Elfin EW-11 Modbus gateway"
          }
        },
        {
          "id": "port",
          "type": "number",
          "label": {
            "en": "Port",
            "nl": "Poort"
          },
          "value": 502,
          "min": 1,
          "max": 65535
        },
        {
          "id": "slave_id",
          "type": "number",
          "label": {
            "en": "Slave ID",
            "nl": "Slave ID"
          },
          "value": 2,
          "min": 1,
          "max": 247
        },
        {
          "id": "poll_interval",
          "type": "number",
          "label": {
            "en": "Poll Interval (seconds)",
            "nl": "Poll Interval (seconden)"
          },
          "value": 120,
          "min": 60,
          "max": 120,
          "hint": {
            "en": "Interval between Modbus polls in seconds. The LG has a Modbus daemon that monitors remote devices and may disconnect if polled too frequently.",
            "nl": "Interval tussen Modbus polls in seconden. De LG heeft een Modbus daemon die externe apparaten monitort en kan de verbinding verbreken bij te frequent pollen."
          }
        },
        {
          "id": "connection_timeout",
          "type": "number",
          "label": {
            "en": "Connection Timeout (ms)",
            "nl": "Verbindingstimeout (ms)"
          },
          "hint": {
            "en": "Timeout for Modbus read/write operations",
            "nl": "Timeout voor Modbus lees/schrijf operaties"
          },
          "value": 5000,
          "min": 1000,
          "max": 30000
        },
        {
          "id": "max_consecutive_errors",
          "type": "number",
          "label": {
            "en": "Max Errors Before Unavailable",
            "nl": "Max Fouten Voor Onbeschikbaar"
          },
          "hint": {
            "en": "Number of consecutive polling errors before marking device unavailable",
            "nl": "Aantal opeenvolgende polling fouten voordat apparaat onbeschikbaar wordt gemarkeerd"
          },
          "value": 3,
          "min": 1,
          "max": 10
        }
      ]
    },
    {
      "type": "group",
      "label": {
        "en": "Features",
        "nl": "Functies"
      },
      "children": [
        {
          "id": "dhw_installed",
          "type": "checkbox",
          "label": {
            "en": "DHW (Domestic Hot Water) Installed",
            "nl": "Tapwarmwater (DHW) geïnstalleerd"
          },
          "hint": {
            "en": "Disable this if your setup does not have a DHW tank. This hides DHW-related controls and sensors from the device.",
            "nl": "Schakel dit uit als uw installatie geen tapwarmwatertank heeft. Dit verbergt DHW-gerelateerde bediening en sensoren."
          },
          "value": true
        },
        {
          "id": "backup_heater_installed",
          "type": "checkbox",
          "label": {
            "en": "Backup Heater Installed",
            "nl": "Backup verwarmer geïnstalleerd"
          },
          "hint": {
            "en": "Disable this if your setup does not have a backup heater. This hides the backup heater temperature sensor.",
            "nl": "Schakel dit uit als uw installatie geen backup verwarmer heeft. Dit verbergt de backup verwarmer temperatuursensor."
          },
          "value": true
        }
      ]
    },
    {
      "type": "group",
      "label": {
        "en": "Heat Pump Info",
        "nl": "Warmtepomp Info"
      },
      "children": [
        {
          "id": "product_group",
          "type": "label",
          "label": {
            "en": "Product Group",
            "nl": "Product Groep"
          },
          "value": "unknown"
        },
        {
          "id": "product_info",
          "type": "label",
          "label": {
            "en": "Product Type",
            "nl": "Product Type"
          },
          "value": "unknown"
        }
      ]
    }
